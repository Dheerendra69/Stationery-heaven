<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Place Order</title>

  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css" />

  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
  <link rel="stylesheet" href="/styles/home.css" />
  <link rel="icon" type="image/jpeg" href="images/Logo.jpeg" />

</head>

<body class="placeorder-body">

  <!-- Header -->
  <header class="header" id="header">
    <nav class="nav container">
      <a href="/index" class="nav__logo">
        Stationery-Heaven</a>

      <div class="nav__menu" id="nav-menu">
        <ul class="nav__list">
          <li class="nav__item">
            <a href="/index" class="nav__link active-link">
              <i class="custom_icons fa-solid fa-store"></i>
              <span class="nav__name">Home</span>
            </a>
          </li>
        </ul>
      </div>

    </nav>
  </header>

  <h1>Place Your Order</h1>

  <!-- Header Section Ends -->
  <form class="placeorder-form" id="placeorder-form">
    
    <div class="placeorder-form-group">
      <label for="name">Full Name</label>
      <input type="text" id="name" placeholder="Enter your full name" required />
    </div>

    <div class="placeorder-form-group">
      <label for="email">Email Address</label>
      <input type="email" id="email" placeholder="Enter your email" required />
    </div>

    <div class="placeorder-form-group">
      <label for="phone">Phone Number</label>
      <input type="tel" id="phone" placeholder="Enter your phone number - '9999999999'" pattern="[0-9]{10}" required />
    </div>

    <div class="placeorder-form-group">
      <label for="address">Shipping Address</label>
      <textarea id="address" placeholder="Enter your complete shipping address" rows="3" required></textarea>
    </div>

    <div class="placeorder-form-group">
      <label for="delivery-date">Preferred Delivery Date</label>
      <input type="date" id="delivery-date" required />
    </div>

    <div class="placeorder-form-group">
      <label for="shop">Shop Name</label>
      <input type="text" id="shop" placeholder="Enter shop name" required />
    </div>

    <div class="placeorder-form-group">
      <label for="payment-method">Payment Method</label>
      <select id="payment-method" required>
        <option value="">-- Select Payment Method --</option>
        <option value="cod">Cash on Delivery</option>
        <option value="card">Credit/Debit Card</option>
        <option value="upi">UPI</option>
      </select>
    </div>

    <h2>Order Items</h2>
    <div id="items-list">
      <div class="placeorder-items-container item-row" data-item-index="0">
        <div class="placeorder-item">
          <label for="item-name-0">Item Name</label>
          <input type="text" id="item-name-0" class="item-name" placeholder="Enter item name" required />
        </div>
        <div class="placeorder-item">
          <label for="quantity-0">Quantity</label>
          <input type="number" id="quantity-0" class="item-quantity" min="1" value="1" required />
        </div>
        <div class="placeorder-item-actions">
          <button type="button" class="remove-item-btn" title="Remove Item">
            <i class="fas fa-trash"></i>
          </button>
        </div>
      </div>
    </div>

    <button type="button" id="add-item-btn" class="add-item-btn">
      <i class="fas fa-plus"></i> Add Another Item
    </button>

    <div class="placeorder-summary">
      <p>Total Items: <span id="total-items">1</span></p>
      <p>Total Quantity: <span id="total-quantity">1</span></p>
    </div>

    <div class="placeorder-button-container">
      <button type="submit" class="placeorder-btn">Confirm Order</button>
      <button type="reset" class="placeorder-btn">Reset</button>
    </div>
  </form>

  <footer id="footer">
    <h1 class="text-center">Stationery-Heaven</h1>
    <p class="text-center">Elevate your everyday with beautiful stationery.
    </p>
    <div class="icons text-center">
      <a href="https://twitter.com/home"><i class="custom_icons bx bxl-twitter"></i></a>
      <a href="https://www.facebook.com/"><i class="custom_icons bx bxl-facebook"></i></a>
      <a href="https://www.google.com/">
        <i class="custom_icons bx bxl-google"></i></a>
      <a href="https://www.skype.com/en/">
        <i class="custom_icons bx bxl-skype"></i></a>
      <a href="https://www.instagram.com/">
        <i class="custom_icons bx bxl-instagram"></i></a>
    </div>
    <div class="copyright text-center">
      &copy; Copyright
      <strong><span>Stationery-Heaven</span></strong>. All Rights Reserved
    </div>
    <div class="credite text-center">
      Designed By
      <a href="#" style="color:orange">Dheerendra Singh</a>
    </div>
  </footer>
  <script src="./js/guestCheckOut.js"></script>

</body>

</html>