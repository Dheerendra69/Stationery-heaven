    />
    <!-- font awesome links -->

    <link rel="icon" type="image/jpeg" href="images/Logo.jpeg" />
  </head>
  <body>
    <!-- Header Section -->
    <header class="header" id="header">
      <nav class="nav container">
        <a href="index" class="nav__logo"> StationaryHeaven</a>

        <div class="nav__menu" id="nav-menu">
          <ul class="nav__list">
